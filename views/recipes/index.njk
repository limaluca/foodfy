{%extends 'layout.njk'%}
    {%block content%}
        <section class="cards admin-cards">

            {% for item in items %}
                <div class="card admin-card" id="{{item.id}}">
                    <div class="cardImageContainer">
                        <img src="{{item.image_url}}" alt="Fotinho da comida">
                    </div>
                    <div class="cardDishTitle">
                        <h4>{{item.title}}</h4>
                    </div>
                    <div class="cardDishCook">
                        <p>{{item.author}}</p>
                    </div>
                    <a href="/recipes/{{item.id}}">Visualizar</a>
                </div>
            {% endfor %}
        </section>

    {%endblock%}