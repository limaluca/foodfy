{%extends 'layout.njk'%}


    {% block header %}
        <header class="foodfyMenu-Admin">
            <link rel="stylesheet" href="/styles.css">
            <div class="foodfyMenu">
                <a href="/index">
                    <img src="/layouts/assets/logoAdmin.png" alt="foodfyLogo">
                </a>
                <a href="/about" class="navigationMenu">About us</a>
                <a href="/recipes" class="navigationMenu">Receitas</a>
            </div>
        </header>
    {% endblock header %}

    {%block content%}
        <h2>Gerenciar Receitas</h2>
        <section class="cards admin-cards">

            {% for item in items %}
                <div class="card admin-card" id="{{item.id}}">
                    <div class="cardImageContainer">
                        <img src="{{item.image_url}}" alt="Fotinho da comida">
                    </div>
                    <div class="cardDishTitle">
                        <h4>{{item.title}}</h4>
                    </div>
                    <div class="cardDishCook">
                        <p>{{item.author}}</p>
                    </div>
                    <a href="/recipes/{{item.id}}">Visualizar</a>
                </div>
            {% endfor %}
        </section>

        {%endblock%}