{%extends 'layout.njk'%}


{%block content%}


    <div class="recipe-details">
        
        <div class="recipe-presentation">
            <img id="image" src="{{item.image}}" alt="imagem de {{item.title}}">
            <h1>{{item.title}}</h1>
            <p>{{item.author}}</p>
        </div>
    </div>

    <div class="container">
        
        <div class="recipe__ingredients">
            <h2>
                Ingredientes<button class="button">MOSTRAR</button>
            </h2>
            <div class="recipe__info hide">
                <ul>
                        {% for ingredient in item.ingredients %}
                            <li>{{ ingredient }}</li>     
                        {% endfor %}
                    
                </ul>
            </div>
        </div>
        <div class="recipe__preparation">
            <h2>
                Modo de preparo<button class="button">MOSTRAR</button>
            </h2>
            <div class="recipe__info hide">
                <ol>
                        {% for prep in item.preparation %}
                            <li>{{ prep }}</li>
                        {% endfor %}
                    
                </ol>
            </div>
        </div>
        <div class="recipe__add">
            <h2>
                Informações adicionais<button class="button">Mostrar</button>
            </h2>
            <div class="recipe__info hide">
                <p>{{ item.information }}</p>
            </div>
        </div>

    </div>






{%endblock%}